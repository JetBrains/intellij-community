java_binary(
    name = "test-abi-generator",
    runtime_deps = [":abi"],
    main_class = "org.jetbrains.bazel.jvm.abi.TestAbiGenerator",
    jvm_flags = [
        "-Xms1024m",
        "-Xmx6144m",
        "-Djava.awt.headless=true",
        "-Dapple.awt.UIElement=true",
