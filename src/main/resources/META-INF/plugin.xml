<idea-plugin>
  <id>de.thomasrosenau.diffplugin</id>
  <version>0.0.1</version>
  <name>Diff / Patch File Support</name>
  <vendor email="thomasr@fantasymail.de" url="https://github.com/ThomasR/">Thomas Rosenau</vendor>

  <description><![CDATA[
    <p>Syntax highlighting for .diff files and .patch files.</p>
    <p>Supports the common formats: normal, contextual, unified.</p>
    <p>Does not support the formats: side-by-side, ed, RCS.</p>
    <p>Icons by <a href="https://www.iconfinder.com/korawan_m">BomSymbols</a>.</p>
    ]]></description>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="de.thomasrosenau.diffplugin.DiffFileTypeFactory" />
    <lang.parserDefinition language="Diff"
        implementationClass="de.thomasrosenau.diffplugin.parser.DiffParserDefinition" />
    <lang.syntaxHighlighterFactory language="Diff"
        implementationClass="de.thomasrosenau.diffplugin.highlighter.DiffSyntaxHighlighterFactory" />
  </extensions>

</idea-plugin>
