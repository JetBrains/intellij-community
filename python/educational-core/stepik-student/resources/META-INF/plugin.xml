<!--suppress XmlUnboundNsPrefix -->
<idea-plugin version="2">
  <id>com.jetbrains.tmp.interactivelearning</id>
  <name>Stepik plugin core</name>
  <version>2.0.7</version>
  <idea-version since-build="162.0"/>
  <description><![CDATA[
      Stepik plugin core. Plugin based on Education plugin core.
      ]]></description>
  <vendor email="petr.bogdanov@stepik.org" url="http://www.stepik.org">Stepik</vendor>

  <change-notes><![CDATA[

      ]]>
  </change-notes>

  <!--depends>com.intellij.modules.python</depends-->

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->

  <depends>com.intellij.modules.lang</depends>

  <project-components>
    <component>
      <implementation-class>com.jetbrains.tmp.learning.StudyProjectComponent</implementation-class>
      <interface-class>com.jetbrains.tmp.learning.StudyProjectComponent</interface-class>
    </component>
  </project-components>

  <application-components>
    <component>
      <implementation-class>com.jetbrains.tmp.learning.stepik.EduStepikUpdater</implementation-class>
    </component>
  </application-components>

  <extensionPoints>
    <extensionPoint qualifiedName="STEPIK.StudyExecutor" beanClass="com.intellij.lang.LanguageExtensionPoint">
      <with attribute="implementationClass" implements="com.jetbrains.tmp.learning.checker.StudyExecutor"/>
    </extensionPoint>
    <extensionPoint qualifiedName="STEPIK.StudyLanguageManager" beanClass="com.intellij.lang.LanguageExtensionPoint">
      <with attribute="implementationClass" implements="com.jetbrains.tmp.learning.StudyLanguageManager"/>
    </extensionPoint>
    <extensionPoint qualifiedName="STEPIK.studyPluginConfigurator" interface="com.jetbrains.tmp.learning.StudyPluginConfigurator"/>
    <extensionPoint qualifiedName="STEPIK.studyActionsProvider" interface="com.jetbrains.tmp.learning.StudyActionsProvider"/>
    <extensionPoint qualifiedName="STEPIK.studyTwitterPluginConfigurator" interface="com.jetbrains.tmp.learning.StudyTwitterPluginConfigurator"/>
    <extensionPoint qualifiedName="STEPIK.studyActionListener" interface="com.jetbrains.tmp.learning.StudyActionListener"/>
    <extensionPoint qualifiedName="STEPIK.optionsProvider" beanClass="com.jetbrains.tmp.learning.settings.StudyOptionsProviderEP">>
      <with attribute="instance" implements="com.jetbrains.tmp.learning.settings.StudyOptionsProvider"/>
    </extensionPoint>
  </extensionPoints>

  <actions>
    <action id="STEPIK.NewScratchFile" class="com.intellij.ide.scratch.ScratchFileActions$NewFileAction" text="New Scratch File...">
      <add-to-group group-id="FileOpenGroup" relative-to-action="OpenFile" anchor="before"/>
    </action>
    <action id="STEPIK.PrevWindowAction" class="com.jetbrains.tmp.learning.actions.StudyPrevWindowAction" text="Previous Answer Placeholder"
            description="Navigate to the previous answer placeholder">
    </action>
    <action id="STEPIK.NextWindow" class="com.jetbrains.tmp.learning.actions.StudyNextWindowAction" text="Next Answer Placeholder"
            description="Navigate to the next answer holder">
    </action>
    <action id="STEPIK.PreviousTaskAction" class="com.jetbrains.tmp.learning.actions.StudyPreviousStudyTaskAction" text="Previous Task"
            description="Navigate to the previous task"/>
    <action id="STEPIK.NextTaskAction" class="com.jetbrains.tmp.learning.actions.StudyNextStudyTaskAction" text="Next Task"
            description="Navigate to the next task"/>
    <action id="STEPIK.RefreshTaskAction" class="com.jetbrains.tmp.learning.actions.StudyRefreshTaskFileAction" text="Reset Task File"
            description="Refresh current task"/>
    <action id="STEPIK.RefreshAnswerPlaceholder" class="com.jetbrains.tmp.learning.actions.StudyRefreshAnswerPlaceholder" text="Refresh Answer Placeholder">
        <add-to-group group-id="EditorPopupMenu" anchor="last"/>
    </action>
            description="Watch test input "/>
    <action id="STEPIK.ShowHintAction" class="com.jetbrains.tmp.learning.actions.StudyShowHintAction" text="Show Hint for Answer Placeholder"
            description="Show hint for answer placeholder"/>
    <action id="STEPIK.StudyRunAction" class="com.jetbrains.tmp.learning.actions.StudyRunAction" text="Run File With Tests"
            description="Run your code with tests"/>
    <action id="STEPIK.StudyShowAnswersAction" class="com.jetbrains.tmp.learning.actions.StudyFillPlaceholdersAction"
            text="Fill Answer Placeholders">
      <add-to-group group-id="HelpMenu" anchor="before" relative-to-action="HelpTopics"/>
    </action>
    <action id="STEPIK.StudySwitchPanel" class="com.jetbrains.tmp.learning.actions.StudySwitchTaskPanelAction"
            text="Switch Task Description Panel">
    </action>

  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <projectService serviceInterface="com.intellij.codeInsight.documentation.DocumentationManager"
                      serviceImplementation="com.jetbrains.tmp.learning.StudyDocumentationManager" overrides="true"/>
    <applicationConfigurable groupId="tools" instance="com.jetbrains.tmp.learning.settings.StudyConfigurable"
                             id="com.jetbrains.tmp.learning.settings.StudyConfigurable"
                             displayName="Education"/>

    <toolWindow id="Task Description" anchor="right" factoryClass="com.jetbrains.tmp.learning.ui.StudyToolWindowFactory" conditionClass="com.jetbrains.tmp.learning.ui.StudyCondition"/>
    <toolWindow id="Test Results" anchor="bottom" factoryClass="com.jetbrains.tmp.learning.ui.StudyTestResultsToolWindowFactory" conditionClass="com.jetbrains.tmp.learning.ui.StudyCondition"/>
    <fileEditorProvider implementation="com.jetbrains.tmp.learning.editor.StudyFileEditorProvider"/>
    <treeStructureProvider implementation="com.jetbrains.tmp.learning.projectView.StudyTreeStructureProvider"/>
    <highlightErrorFilter implementation="com.jetbrains.tmp.learning.editor.StudyHighlightErrorFilter"/>
    <projectService serviceInterface="com.jetbrains.tmp.learning.StudyTaskManager"
                    serviceImplementation="com.jetbrains.tmp.learning.StudyTaskManager"/>
    <extendWordSelectionHandler implementation="com.jetbrains.tmp.learning.StudyAnswerPlaceholderExtendWordHandler"/>
    <renameHandler implementation="com.jetbrains.tmp.learning.StudyRenameHandler"/>
    <refactoring.moveHandler implementation="com.jetbrains.tmp.learning.StudyMoveDelegate" order="first"/>

    <statistics.usagesCollector implementation="com.jetbrains.tmp.learning.statistics.EduUsagesCollector"/>
    <applicationService serviceImplementation="com.jetbrains.tmp.learning.statistics.EduUsagesCollector"/>
    <applicationService serviceImplementation="com.jetbrains.tmp.learning.stepik.StepikUpdateSettings"/>
  </extensions>

  <extensions defaultExtensionNs="Edu">
    <optionsProvider instance="com.jetbrains.tmp.learning.stepik.StepikStudyOptions"/>
  </extensions>
</idea-plugin>