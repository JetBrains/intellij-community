<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                    http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>intellij.webSymbols</groupId>
    <version>1.0.0</version>
    <artifactId>web-types-gen-root</artifactId>
  </parent>
  <artifactId>web-types-gen</artifactId>
  <packaging>pom</packaging>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <phase>compile</phase>
            <configuration>
              <filesets>
                <fileset>
                  <directory>${basedir}/../../gen/com/intellij/webSymbols/webTypes/json/</directory>
                  <includes>
                    <include>**/*</include>
                  </includes>
                  <followSymlinks>false</followSymlinks>
                </fileset>
              </filesets>
            </configuration>
            <goals>
              <goal>clean</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.jsonschema2pojo</groupId>
        <artifactId>jsonschema2pojo-maven-plugin</artifactId>
        <version>1.0.2</version>
        <configuration>
          <annotationStyle>JACKSON2</annotationStyle>
          <includeAdditionalProperties>true</includeAdditionalProperties>
          <includeHashcodeAndEquals>false</includeHashcodeAndEquals>
          <includeToString>false</includeToString>
          <targetVersion>1.8</targetVersion>
          <targetPackage>com.intellij.webSymbols.webTypes.json</targetPackage>
          <sourceDirectory>${basedir}/../resources/web-types.json</sourceDirectory>
          <sourceType>JSONSCHEMA</sourceType>
          <outputDirectory>${basedir}/../../gen/</outputDirectory>
          <customRuleFactory>com.intellij.webSymbols.webTypes.gen.WebTypesRuleFactory</customRuleFactory>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>intellij.webSymbols</groupId>
            <artifactId>web-types-ext</artifactId>
            <version>1.0.0</version>
          </dependency>
          <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson2x.version}</version>
          </dependency>
          <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-yaml</artifactId>
            <version>${jackson2x.version}</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <phase>compile</phase>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>