      "elements": [
        {
          "name": "tag-with-css",
          "css": {
            "properties": [
              {
                "name": "prop-from-tag",
                "description": "CSS Property from tag"
              }
            ],
            "classes": [
              {
                "name": "class-from-tag",
                "description": "CSS class from tag"
              }
            ]
          }
        }
      ],
      "attributes": [
        {
          "name": "Class Style Binder",
          "pattern": {
            "items": "/css/classes",
            "template": [
              "cls-",
              "#item"
            ]
          },
          "css": {
            "classes": [
              {
                "name": "attr-class",
                "description": "CSS class from attribute"
              }
            ]
          }
        }
      ]
    },
    "css": {
      "properties": [
        {
          "name": "global-prop",
          "description": "Global CSS property"
        }
      ],
      "classes": [
        {
          "name": "global-class",
          "description": "Global CSS class"
        }
      ]
    }
  }
}