<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <pluginSuggestionProvider implementation="com.intellij.java.promo.FrameworkSuggestionProvider"/>
    <pluginSuggestionProvider implementation="com.intellij.java.promo.LiquibaseSuggestionProvider"/>

    <applicationConfigurable id="promo.database"
                             groupId="tools"
                             provider="com.intellij.java.promo.PromoDatabaseConfigurableProvider"
                             bundle="messages.FeaturePromoBundle"
                             key="promo.configurable.database"/>
    <applicationConfigurable id="promo.kubernetes"
                             groupId="build"
                             provider="com.intellij.java.promo.PromoKubernetesConfigurableProvider"
                             bundle="messages.FeaturePromoBundle"
                             key="promo.configurable.kubernetes"/>
    <applicationConfigurable id="promo.javascript"
                             groupId="language"
                             provider="com.intellij.java.promo.PromoJSConfigurableProvider"
                             bundle="messages.FeaturePromoBundle"
                             key="promo.configurable.javascript"/>
    <applicationConfigurable id="promo.typescript"
                             groupId="language"
                             provider="com.intellij.java.promo.PromoTSConfigurableProvider"
                             bundle="messages.FeaturePromoBundle"
                             key="promo.configurable.typescript"/>
    <applicationConfigurable id="promo.swagger"
                             groupId="language"
                             provider="com.intellij.java.promo.PromoSwaggerConfigurableProvider"
                             bundle="messages.FeaturePromoBundle"
                             key="promo.configurable.swagger"/>
    <applicationConfigurable id="promo.profiler"
                             groupId="build"
                             provider="com.intellij.java.promo.PromoProfilerConfigurableProvider"
                             bundle="messages.JavaUiBundle"
                             key="promo.configurable.profiler"/>

    <moduleBuilder builderClass="com.intellij.java.promo.PromoSpringModuleBuilder"/>

    <registryKey key="idea.ultimate.features.hints.enabled"
                 defaultValue="true"
                 description="IntelliJ IDEA Ultimate features in UI"/>
  </extensions>

  <actions resource-bundle="messages.JavaUiBundle">
    <action id="PromoSpring"
            class="com.intellij.java.promo.PromoSpringAction"
            icon="AllIcons.Ultimate.Lock"/>

    <action id="PromoBeans"
            class="com.intellij.java.promo.PromoBeansAction"
            icon="AllIcons.Ultimate.Lock"/>

    <action id="PromoPersistence"
            class="com.intellij.java.promo.PromoPersistenceAction"
            icon="AllIcons.Ultimate.Lock"/>

    <action id="PromoEndpoints"
            class="com.intellij.java.promo.PromoEndpointsAction"
            icon="AllIcons.Ultimate.Lock"/>

    <action id="PromoDatabase"
            class="com.intellij.java.promo.PromoDatabaseAction"
            icon="AllIcons.Ultimate.Lock"/>

    <action id="PromoKubernetes"
            class="com.intellij.java.promo.PromoKubernetesAction"
            icon="AllIcons.Ultimate.Lock"/>

    <action id="PromoOpenAPI"
            class="com.intellij.java.promo.PromoOpenAPIAction"
            icon="AllIcons.Ultimate.Lock"/>

    <action id="PromoProfiler"
            class="com.intellij.java.promo.PromoProfilerAction"
            icon="AllIcons.Ultimate.Lock"/>
  </actions>
</idea-plugin>