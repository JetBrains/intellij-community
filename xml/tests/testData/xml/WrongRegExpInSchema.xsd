<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
<xs:simpleType name="TestType">
<xs:restriction base="xs:string">
<xs:pattern value="[0-9]+-([0-9]+|<error descr="Dangling metacharacter">*</error><error descr="Unmatched closing ')'">)</error>"/>
</xs:restriction>
</xs:simpleType>
<xs:simpleType name="TestType2">
  <xs:restriction base="xs:string">
  <xs:pattern value="[0-9]+-([0-9]+|.*)"/>
  </xs:restriction>
</xs:simpleType>

</xs:schema>