	input.month.elem = 
		element input { input.month.attrs }
	input.month.attrs = 
		(	common.attrs
		&	common-form.attrs
		&	shared-input.attrs
		&	input.month.attrs.type
		&	input.month.attrs.min?
		&	aria.prop.valuemin?
		&	input.month.attrs.max?
		&	aria.prop.valuemax?
		&	aria.prop.required?
		&	input.attrs.step.integer?
		&	input.month.attrs.value?
		)	
		input.month.attrs.type = 
			attribute type {
				w:string "month"
			}
		input.month.attrs.min =
			attribute min {
				form.data.month
			}
		input.month.attrs.max =
			attribute max {
				form.data.month			
			}	
		input.month.attrs.value =
			attribute value {
				w:string "" | form.data.month
			}
		
	input.elem |= input.month.elem

