<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.intellij</groupId>
  <artifactId>devkit-starter</artifactId>
  <version>1.0</version>

  <properties>
    <java.version>17</java.version>
    <kotlin.target>17</kotlin.target>
    <gradle.version>8.1.1</gradle.version>
    <kotlin.version>1.8.20</kotlin.version>
    <gradle.intellij.version>1.13.3</gradle.intellij.version>

    <intellij.version>2022.2.5</intellij.version>
    <intellij.since.build>222</intellij.since.build>
    <intellij.until.build>232.*</intellij.until.build>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.jetbrains.kotlin</groupId>
        <artifactId>kotlin-gradle-plugin</artifactId>
        <version>${kotlin.version}</version>
      </dependency>

      <dependency>
        <groupId>org.jetbrains.intellij.plugins</groupId>
        <artifactId>gradle-intellij-plugin</artifactId>
        <version>${gradle.intellij.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>