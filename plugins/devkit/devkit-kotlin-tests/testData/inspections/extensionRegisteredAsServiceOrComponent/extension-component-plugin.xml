<idea-plugin>
  <id>com.intellij.example</id>

  <extensionPoints>
    <extensionPoint name="myExtension" interface="MyExtension" dynamic="true"/>
  </extensionPoints>

  <extensions defaultExtensionNs="com.intellij.example">
    <myExtension implementation="ExtensionComponent"/>
  </extensions>

  <application-components>
    <component>
      <implementation-class>ExtensionComponent</implementation-class>
    </component>
  </application-components>

</idea-plugin>