<idea-plugin>
  <extensionPoints>
    <!--suppress PluginXmlValidity -->
    <extensionPoint name="serviceType1" beanClass="com.intellij.openapi.components.ServiceDescriptor"/>
    <!--suppress PluginXmlValidity -->
    <extensionPoint name="serviceType2" beanClass="com.intellij.openapi.components.ServiceDescriptor"/>

  </extensionPoints>

  <extensions defaultExtensionNs="com.intellij">
    <serviceType1 <warning descr="Redundant attribute 'serviceInterface'">serviceInterface="java.lang.String"</warning>
                  serviceImplementation="java.lang.String"/>

    <serviceType2 serviceInterface="java.lang.Number"
                  serviceImplementation="java.lang.Double"
                  testServiceImplementation="java.lang.Integer"/>

  </extensions>
</idea-plugin>