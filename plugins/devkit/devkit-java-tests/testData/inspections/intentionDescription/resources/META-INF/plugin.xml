<idea-plugin>
  <id>com.intellij.example</id>
  <extensions defaultExtensionNs="com.intellij">
    <intentionAction>
      <className>MyIntentionAction</className>
    </intentionAction>
    <intentionAction>
      <className>MyIntentionActionWithDescription</className>
    </intentionAction>
    <intentionAction>
      <className>MyIntentionActionWithoutBeforeAfter</className>
    </intentionAction>
    <intentionAction>
      <className>MyIntentionActionOptionalBeforeAfter</className>
      <skipBeforeAfter>true</skipBeforeAfter>
    </intentionAction>
    <intentionAction>
      <className>MyQuickFixIntentionAction</className>
    </intentionAction>
    <intentionAction>
      <className>MyIntentionActionWithDescriptionDirectoryName</className>
      <descriptionDirectoryName>customDescriptionDirectory</descriptionDirectoryName>
    </intentionAction>

    <java.error.fix errorCode="exception.unhandled" implementationClass="MyJavaErrorFix"/>

  </extensions>
</idea-plugin>