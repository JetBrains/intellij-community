class HelloSpock extends spock.lang.Specification {
  def "length of Spock's and his friends' names"() {
    expect:
    name.size() == length

    where:
    name | length | foo
    "Spock" | 5
    "Kirk" | 4 | xxx | yyy
    "Scotty" | 6 |dddddddddd | fff

    //aaa
    a | b | c
  }
}
