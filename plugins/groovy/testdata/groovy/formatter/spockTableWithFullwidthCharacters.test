class HelloSpockSpec extends spock.lang.Specification {
  def "length of Spock's and his friends' names"() {
    expect:
    name.size() == length
    where:
    name    | length
    "杰克瑞奇" | 5
    "杰克瑞奇" | 4
    "理查德"   | 6
  }
}
