{
  "title": "JSON schema for Travis CI configuration files",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    {
      "type": "object",
      "required": ["provider"],
      "properties": {
        "provider": {
          "type": "array",
          "uniqueItems": true,
          "minItems": 1,
          "items": {
            "allOf": [
              {
                "type": "object",
                "required": [
                  "select"
                ],
                "properties": {
                  "select": {
                    "enum": [
                      "A",
                      "B"
                    ]
                  }
                }
              },
              {
                "oneOf": [
                  { "$comment": "IDE suggestions: var_a_1, var_a_2 required: var_a_1",
                    "if": {
                      "required": [
                        "select"
                      ],
                      "properties": {
                        "select": {
                          "const": "A"
                        }
                      }
                    },
                    "then": {
                      "type": "object",
                      "required": [
                        "var_a_1"
                      ],
                      "properties": {
                        "var_a_1": {
                          "type": "string"
                        },
                        "var_a_2": {
                          "type": "string"
                        }
                      }
                    },
                    "else": false
                  },
                  {
                    "if": {
                      "required": [
                        "select"
                      ],
                      "type": "object",
                      "properties": {
                        "select": {
                          "const": "B"
                        }
                      }
                    },
                    "then": {
                      "$comment": "Block other property values (This is a work around, value 'false' may not be used here)",
                      "additionalProperties": {
                        "const": "B"
                      },
                      "type": "object",
                      "$comment": "IDE suggestions: var_b_1, var_b_2, var_b_3",
                      "properties": {
                        "var_b_1": {
                          "type": "string"
                        },
                        "var_b_2": {
                          "type": "string"
                        },
                        "var_b_3": {
                          "type": "string"
                        }
                      }
                    },
                    "else": false
                  }
                ]
              }
            ]
          }
        }
      }
    }
  ]
}






