<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.example</groupId>
  <artifactId>vm-options-check</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>vm-options-check</name>
  <description>Project to verify that Maven Run Configuration VM options are applied in IntelliJ IDEA</description>

  <properties>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <plugins>
      <!-- 1) Fail fast if the required -D property from VM options is missing or has a wrong value -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>3.6.1</version>
        <executions>
          <execution>
            <id>fail-if-vm-option-missing</id>
            <phase>validate</phase>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <fail>true</fail>
              <rules>
                <requireProperty>
                  <!-- Set via VM options: -Dtest.vmOption=enabled -->
                  <property>test.vmOption</property>
                  <regex>^enabled$</regex>
                  <regexMessage>Property 'test.vmOption' must be set to 'enabled'. Make sure VM options are applied to Maven (e.g. -Dtest.vmOption=enabled).</regexMessage>
                  <message>Property 'test.vmOption' is required. Add -Dtest.vmOption=enabled to Maven VM options.</message>
                </requireProperty>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
