{
  "name": "powershell",
  "version": "1.0.0",
  "description": "%description%",
  "license": "MIT",
  "contributes": {
    "languages": [
      {
        "id": "powershell",
        "extensions": [
          ".ps1",
          ".psm1",
          ".psd1",
          ".pssc",
          ".psrc"
        ],
        "aliases": [
          "PowerShell",
          "powershell",
          "ps",
          "ps1"
