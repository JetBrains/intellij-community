<idea-plugin package="com.intellij.laf.macos">
  <id>com.intellij.laf.macos</id>
  <name>macOS Light Theme</name>

  <vendor>JetBrains</vendor>
  <category>Themes</category>

  <description><![CDATA[Provides macOS Look And Feel that mimics macOS native Blue and Graphite themes]]></description>

  <dependencies>
    <plugin id="com.intellij.modules.lang"/>
  </dependencies>

  <extensions defaultExtensionNs="com.intellij">
    <themeProvider id="macOSLight" path="/macintellijlaf.theme.json" targetUi="classic" parentTheme="IntelliJ" />
  </extensions>
</idea-plugin>