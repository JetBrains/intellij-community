{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "properties": {
        "package": {
            "title": "Package definition",
            "description": "Defines a package",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Package name",
                    "description": "An identifier used to refer to the package"
                },
                "version": {
                    "type": "string"
                },
                "authors": {
                    "type": "array",
                    "title": "Package",
                    "description": "Lists people or organizations that are considered the \"authors\" of the package",
                    "items": {
                        "type": "string"
                    }
                },
                "edition": {
                    "$ref": "#/$defs/edition",
                    "type": "string"
                }
            }
        },
        "bin": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "test": {
                        "type": "boolean"
                    }
                }
            }
        },
        "dependencies": {
            "type": "object",
            "$ref": "#/$defs/dependencies"
        },
        "target": {
            "type": "object",
            "patternProperties": {
                "^.+$": {
                    "type": "object",
                    "properties": {
                        "dependencies": {
                            "type": "object",
                            "$ref": "#/$defs/dependencies"
                        }
                    }
                }
            }
        },
        "foo": {
            "type": "object",
            "properties": {
                "bar": {
                    "type": "array",
                    "items": {
                        "properties": {
                            "qux": {
                                "type": "array",
                                "items": {
                                    "properties": {
                                        "d": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            },
                            "c": {
                                "type": "integer"
                            }
                        }
                    }
                },
                "baz": {
                    "type": "array",
                    "items": {
                        "properties": {
                            "b": {
                                "type": "integer"
                            }
                        }
                    }
                },
                "a": {
                    "type": "integer"
                },
                "number-enum": {
                    "type": "number",
                    "enum": [1, 2, 3]
                }
            }
        },
        "bar": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "baz": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object"
                }
            ]
        }
    },
    "$defs": {
        "edition": {
            "type": "string",
            "enum": [
                "2015",
                "2018",
                "2021"
            ],
            "default": "2018"
        },
        "dependencies": {
            "patternProperties": {
                "^.+$": {
                    "type": "object",
                    "properties": {
                        "version": {
                            "type": "string"
                        },
                        "features": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
