<idea-plugin package="org.jetbrains.kotlin.idea.navigation">
  <extensions defaultExtensionNs="com.intellij">

    <applicationService
            serviceInterface="org.jetbrains.kotlin.psi.KotlinDeclarationNavigationPolicy"
            serviceImplementation="org.jetbrains.kotlin.idea.navigation.KotlinAnalysisApiBasedDeclarationNavigationPolicyImpl"/>
    <generatedSourcesFilter implementation="org.jetbrains.kotlin.idea.navigation.KotlinResolveExtensionGeneratedSourcesFilter"/>

  </extensions>
</idea-plugin>