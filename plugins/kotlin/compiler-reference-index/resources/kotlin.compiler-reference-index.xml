<idea-plugin package="org.jetbrains.kotlin.idea.search.refIndex">
  <extensions defaultExtensionNs="com.intellij">
    <codeUsageScopeOptimizer implementation="org.jetbrains.kotlin.idea.search.refIndex.KotlinScopeOptimizer"/>

    <projectService
            serviceImplementation="org.jetbrains.kotlin.idea.search.refIndex.KotlinCompilerReferenceIndexService"
            preload="notHeadless"/>

    <advancedSetting
            id="kotlin.compiler.ref.index"
            default="true"
            groupKey="group.advanced.settings.kotlin"
            bundle="messages.KotlinReferenceIndexBundle"/>

    <languageCompilerRefAdapter
            implementation="org.jetbrains.kotlin.idea.search.refIndex.KotlinCompilerRefHelper"/>

    <compiler.isUpToDateCheckConsumer
            implementation="org.jetbrains.kotlin.idea.search.refIndex.KotlinCompilerReferenceIndexService$KCRIIsUpToDateConsumer"/>

    <languageCompilerRefAdapter.directInheritorProvider
            implementation="org.jetbrains.kotlin.idea.search.refIndex.KotlinDirectInheritorProvider"/>
  </extensions>

  <actions>
    <action
            class="org.jetbrains.kotlin.idea.search.refIndex.KotlinCompilerReferenceIndexVerifierAction"
            id="KotlinCompilerReferenceIndexVerifierAction"
            internal="true">
      <add-to-group group-id="Internal" anchor="last"/>
    </action>
  </actions>

  <resource-bundle>messages.KotlinReferenceIndexBundle</resource-bundle>
</idea-plugin>
