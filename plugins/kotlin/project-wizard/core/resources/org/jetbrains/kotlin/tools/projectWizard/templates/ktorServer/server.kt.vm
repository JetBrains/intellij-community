    embeddedServer(Netty, port = 8080, host = "127.0.0.1") {
        routing {
            get("/") {
                call.respondHtml(HttpStatusCode.OK, HTML::index)
            }
            #foreach($route in $routes)
            $route
            #end
        }
    }.start(wait = true)
