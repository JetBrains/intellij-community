fun foo(arg: Int): Int {
    when {
        arg < 0 -> {
            var x = arg + 1
            x++
            return x
        }
        arg > 0 -> {
            var y = arg - 1
            y--
            return y
        }
        else -> {
            var z = arg
            z *= 2
            return z
        }
    }
}
