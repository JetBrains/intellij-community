<idea-plugin>

  <extensionPoints>
    <extensionPoint qualifiedName="org.jetbrains.kotlin.codeinsight.quickfix.registrar"
                    interface="org.jetbrains.kotlin.idea.codeinsight.api.applicators.fixes.KotlinQuickFixRegistrar"
                    dynamic="true"/>

    <extensionPoint qualifiedName="com.intellij.newProjectWizard.buildSystem.kotlin"
                    interface="org.jetbrains.kotlin.tools.projectWizard.KotlinBuildSystemType" dynamic="true"/>
  </extensionPoints>

  <extensions defaultExtensionNs="org.jetbrains.kotlin">
    <codeinsight.quickfix.registrar implementation="org.jetbrains.kotlin.idea.k2.codeinsight.fixes.KotlinK2QuickFixRegistrar"/>

    <j2kConverterExtension implementation="org.jetbrains.kotlin.j2k.K2J2KConverterExtension"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <codeInsight.unresolvedReferenceQuickFixProvider
            implementation="org.jetbrains.kotlin.idea.k2.codeinsight.fixes.KotlinFirUnresolvedReferenceQuickFixProvider"/>
  </extensions>

</idea-plugin>
