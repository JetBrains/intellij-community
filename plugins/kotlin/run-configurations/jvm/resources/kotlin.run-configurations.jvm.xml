    <kotlinTestFramework id="delegateTestFramework" order="last"
                         implementation="org.jetbrains.kotlin.idea.runConfigurations.jvm.KotlinDelegatingTestFramework"/>
  </extensions>
  <extensions defaultExtensionNs="com.intellij">
