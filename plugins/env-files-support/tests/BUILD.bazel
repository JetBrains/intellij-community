load("@rules_jvm//:jvm.bzl", "resourcegroup")

resourcegroup(
  name = "tests_test_resources",
  srcs = glob(["testResources/**/*"]),
  strip_prefix = "testResources",
  visibility = ["//visibility:public"],  # used by @ultimate//:dotenv-tests_test_lib
)

filegroup(
  name = "tests_test_sources",
  srcs = glob(["java/**/*.kt", "java/**/*.java"], allow_empty = True),
  visibility = ["//visibility:public"],  # used by @ultimate//:dotenv-tests_test_lib
)
