load("@rules_jvm//:jvm.bzl", "jvm_resources")

jvm_resources(
  name = "go_resources",
  files = glob(["resources/**/*"]),
  strip_prefix = "resources",
  visibility = ["//visibility:public"],  # used by @ultimate//:dotenv-go
)

filegroup(
  name = "go_sources",
  srcs = glob(["src/**/*.kt", "src/**/*.java"], allow_empty = True),
  visibility = ["//visibility:public"],  # used by @ultimate//:dotenv-go
)
