load("@rules_jvm//:jvm.bzl", "resourcegroup")

resourcegroup(
  name = "docker_resources",
  srcs = glob(["resources/**/*"]),
  strip_prefix = "resources",
  visibility = ["//visibility:public"],  # used by @ultimate//:dotenv-docker
)

filegroup(
  name = "docker_sources",
  srcs = glob(["src/**/*.kt", "src/**/*.java"], allow_empty = True),
  visibility = ["//visibility:public"],  # used by @ultimate//:dotenv-docker
)
